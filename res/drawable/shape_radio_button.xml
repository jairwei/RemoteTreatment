<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true">
		<layer-list>
			<item>
				<shape>
					<padding android:bottom="3dip" />
					<solid android:color="@color/green" />
				</shape>
			</item>
			<item>
				<shape>
					<solid android:color="@color/white" />
					<padding
						android:bottom="10dp"
						android:left="10dp"
						android:right="10dp"
						android:top="10dp" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape>
					<padding android:bottom="3dip" />
					<solid android:color="@color/green" />
				</shape>
			</item>
			<item>
				<shape>
					<solid android:color="@color/white" />
					<padding
						android:bottom="10dp"
						android:left="10dp"
						android:right="10dp"
						android:top="10dp" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>
			<item>
				<shape>
					<padding android:bottom="1px" />
					<solid android:color="@color/gray_dd" />
				</shape>
			</item>
			<item>
				<shape>
					<solid android:color="@color/white" />
					<padding
						android:bottom="10dp"
						android:left="10dp"
						android:right="10dp"
						android:top="10dp" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>